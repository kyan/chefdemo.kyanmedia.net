server {
  listen                80;

  server_name <%= vhost_server_name %>;
  root <%= current_path %>/public;
  passenger_enabled on;
  rails_env <%= vhost_env %>;
  client_max_body_size 4M;

  # serve static content directly
  location ~* \.(ico|jpg|gif|png|swf|html)$ {
    if (-f $request_filename) {
      expires max;
      break;
    }
  }
}